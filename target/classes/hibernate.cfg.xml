<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Drop and re-create the database on startup -->
        <property name="hibernate.hbm2ddl.auto"> update </property>

        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/manyToOne</property>
        <property name="connection.username">root</property>
        <property name="connection.password">password</property>

        <!-- MySQL DB dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- print all executed SQL on console -->
        <property name="hibernate.show_sql" >false </property>
        <property name="hibernate.format_sql" >false </property>

<!--        &lt;!&ndash;   Mapping entity file â†’-->
        <mapping class="com.sithuhantun.model.Teacher"/>
        <mapping class="com.sithuhantun.model.Department"/>
    </session-factory>
 </hibernate-configuration>

